<section class='container mt-5 pt-3 targeted'>
    <div class="row d-flex justify-content-center">
        <div class="col-8">
            <form id='story-edit-form'>
                <h1 class=" ml-5 text-center maroon new-story">EDIT YOUR STORY</h1>
                <div class="form-group row">
                    <label for="title-edit" class='col-sm-2 col-form-label'>TITLE</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id='title-edit' value="{{story.story_title}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="story-edit" class='col-sm-2 col-form-label'>STORY TEXT</label>
                    <div class="col-sm-10">
                        <textarea type='textarea' name="story-edit" id="story-edit">{{story.story_text}}</textarea>
                        <button type='submit' class="btn btn-block">UPDATE</button>
                        <button id='delete-btn' data-storyId='{{story.id}}' class="btn btn-block">DELETE
                            STORY</button>
                    </div>
                </div>
            </form>
        </div>
        {{> need-inspo }}
    </div>
</section>

<script src="/javascript/edit-story.js"></script>
<script src="/javascript/delete-story.js"></script>