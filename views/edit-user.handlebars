<section class='container mt-4 targeted'>
    <div class="row d-flex justify-content-center">
        <div class="col-8">
            <form id='user-edit-form'>
                <h1 class=" ml-5 text-center maroon new-story">UPDATE YOUR INFO</h1>
                <div class="form-group row">
                    <label for="title-edit" class='col-sm-2 col-form-label'>TITLE</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id='title-edit' value="{{author.title}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="bio-edit" class='col-sm-2 col-form-label'>BIO</label>
                    <div class="col-sm-10">
                        <textarea type='textarea' name="bio-edit" id="bio-edit"
                            class='bio-input'>{{author.bio}}</textarea>
                        <button type='submit' class="btn btn-block">UPDATE</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="/javascript/edit-user.js"></script>