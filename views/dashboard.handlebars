<section class='dashboard container'>
    <div class="row text-right mt-3">
        <div class="col-6">
            <h1>
                DASHBOARD
            </h1>
        </div>
        <div>
            <button type="button" class="btn btn-block">START A NEW STORY</button>
        </div>
    </div>
    <div class="row mt-4">
        {{#if loggedIn}}
            {{>profile-card}}
        {{/if}}
        <div class="col-6 border-dark border-left text-center">
            <h1> YOUR STORIES </h1>
            <div class="row">
                {{#each author.story.length}}
                <div class="card mx-2 text-left">
                    <img class="card-img-top" src="/src/book.png" alt="Story Image">
                    <div class="card-body">
                        <h6 class="card-title">{{story.story_title}}</h6>
                        <p class="card-text">{{story_text}}</p>
                        {{#if completed}}
                        <a href="#" class="btn">Read More</a>
                        {{else}}
                        <a href="#" class="btn">Contribute Here</a>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>