<div class="container mt-3">
    <div class="row">
        <div class="col-8">
            <form id='story-form'>
                <h1 class="text-center new-story">NEW STORY</h1>
                <div class="form-group row">
                    <label for="story-title" class="col-sm-2 col-form-label">TITLE</label>
                    <div class="col-sm-10">
                        <input class="form-control" id='story-title'>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="story-text" class="col-sm-2 col-form-label">STORY TEXT</label>
                    <div class="col-sm-10">
                        <textarea id='story-text'></textarea>
                        <button type="submit" class="btn btn-block">CREATE STORY</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="inspo col-sm text-center text-uppercase mt-4">
            <h1 class="text-center">NEED INSPO?</h1>
            <div class="container text-left mt-3">
                <button type="button" id="twitter" class="btn btn-block">SEARCH WITH TWITTER</button>
                <ul id="inspoDisplay">
                    <li>
                        Trending Hashtags will appear here.
                    </li>
                    <li>
                        Results may take a few seconds.
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

{{#if loggedIn}}
<script src="/javascript/new-story.js"></script>
{{/if}}