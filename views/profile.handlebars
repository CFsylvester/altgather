<section class='dashboard container mt-5 pt-3'>
    <div class="row d-flex text-center mt-3">
        <div class="col-md-6 border-right">
            <h1 class="gold text-uppercase border-bottom mb-5">{{author.username}}'S PROFILE</h1>

            <div class="col profile rounded gold mr-5 py-3">
                <div class="row">
                    <div class="col">
                        <h2 class='text-uppercase'>{{author.username}} </h2>
                        <p>{{author.email}}</p>
                    </div>
                </div>
                <h4 class="text-center">{{author.title}}</h4>
                <p>{{author.bio}}</p>
            </div>

        </div>
        <div class="col-md-6">
            <h1 class="maroon text-uppercase border-bottom mb-5"> {{author.username}}'S STORIES </h1>
            <div class="row d-flex justify-content-center">
                {{#each stories as |story|}}
                {{> story-card story}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-6 border-dark border-left text-center">
            <div class="container">
            </div>
        </div>
    </div>
</section>