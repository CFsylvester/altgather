<section class='signup-wrapper'>
    <h2 class='login-heading input-center'>SIGNUP</h2>

    <div class="form-wrapper">
        <form id='signup-form'>

            <div class="col input-center">
                <label for="signup-name" class='input-text'>Username</label>
