    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <header>
        <nav class="container">
            <div class="row nav-wrap">
                {{#if loggedIn}}
                <div>
                    <a href="/dashboard"><button class='btn'>Dashboard</button></a>
                </div>
                {{else}}
                <div>
                    {{!-- empty --}}
                </div>
                {{/if}}
                <div>
                    <a href="/">
                        <img src='/src/logo.png' width="400" height="150" alt="" loading="lazy">
                    </a>
                </div>
                {{#if loggedIn}}
                <div class="login-wrap">

                    <div>
                        <a href="/login"><button id='logout-btn' class='btn'>Logout</button></a>
                    </div>
                </div>
                {{else}}
                {{!-- <div>
                    <a href="/signup"><button class='btn btn-success'>Create Account</button></a>
                </div> --}}
