<body>
    <div class="wrapper">
        <header>
            <div>
                <div class="text-center">
                    <a class="image" href="/">
                        <img  class="img-fluid" src='/src/logo.png' alt="" loading="lazy">
                    </a>
                </div>
                <nav class="navbar">
                    <p>
                        {{#if loggedIn}}
                        <div class="mr-auto">
                            <a href="/dashboard" id='dashboard-btn'>Dashboard</a>
                        </div>
                        {{else}}
                        <div>
                        </div>
                        {{/if}}
                    </p>
                    <div class="">
                        {{#if loggedIn}}
                        {{!-- <div class="login-wrap"> --}}
                        <a href='/' id='logout-btn'>Logout</a>
                        {{!-- </div> --}}
                        {{else}}
                        <a href="/login" id='login-btn'>Login</a>
                        {{/if}}
                    </div>
                </nav>
            </div>
        </header>
        <main class="">
            {{{ body }}}
        </main>
        <footer>
            <div class="row text-uppercase pl-3">
                <a class="ml-3 my-auto" href="https://github.com/CFsylvester/pass-the-page" target="_blank">
                    <i class="fab fa-github-square"></i>
                </a>
                <p class="devs my-auto ml-2">
                    Developed By: <br>
                    <a href="https://cfsylvester.github.io/clairesylvester.github.io/" target="_blank">
                        Claire Sylvester,
                    </a>
                    <a href="https://www.linkedin.com/mwlite/in/curtis-henderson-b22a0271" target="_blank">
                        Curtis Henderson,
                    </a>
                    &
                    <a href="https://tchestnut85.github.io/" target="_blank">
                        Tom Chestnut
                    </a>
                </p>
            </div>
        </footer>
    </div>
    {{#if loggedIn}}
    <script src='/javascript/logout.js'></script>
    {{/if}}
</body>

</html>